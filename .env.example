# PROS Environment Variables
# ===========================
# Copy this file to .env and fill in your values

# ===========================================
# Spring Profile Selection
# ===========================================
# Available profiles: local, dev, prod
# - local: Docker PostgreSQL (development)
# - dev: Supabase PostgreSQL (staging)
# - prod: Supabase PostgreSQL (production)
SPRING_PROFILES_ACTIVE=local

# ===========================================
# Local Database Configuration (local profile)
# ===========================================
# Used when SPRING_PROFILES_ACTIVE=local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pros
DB_USER=pros
DB_PASSWORD=pros_dev

# ===========================================
# Supabase Configuration (dev/prod profiles)
# ===========================================
# Used when SPRING_PROFILES_ACTIVE=dev or prod
# Get these from: Supabase Dashboard -> Settings -> Database

# Your Supabase project ID (found in the URL: https://<project-id>.supabase.co)
SUPABASE_PROJECT_ID=your-project-id

# Database password (set during project creation)
SUPABASE_DB_PASSWORD=your-database-password

# Optional: Supabase API (for future Auth integration)
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080

# CORS Configuration (comma-separated list of allowed origins)
# IMPORTANT: In production, always specify explicit origins
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# OpenAI Configuration
# ===========================================
# Required for embeddings and explanations
OPENAI_API_KEY=sk-your-api-key-here

# ===========================================
# JWT Configuration
# ===========================================
# IMPORTANT: Change this secret in production!
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-32-characters
JWT_EXPIRATION_MS=86400000

# ===========================================
# OAuth2 Configuration (Optional)
# ===========================================

# Google OAuth2
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth2 Success Redirect URI (frontend callback URL)
OAUTH2_SUCCESS_REDIRECT_URI=http://localhost:3000/oauth/callback
